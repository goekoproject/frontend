{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["esnext", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@goeko/business-ui": ["libs/business-ui/src/index.ts"],
      "@goeko/business-ui/*": ["libs/business-ui/src/lib/*"],
      "@goeko/core": ["libs/core/src/index.ts"],
      "@goeko/coretools": ["libs/coretools/src/index.ts"],
      "@goeko/store": ["libs/store/src/index.ts"],
      "@goeko/store/*": ["libs/store/src/lib/*"],
      "@goeko/store/model/*": ["libs/store/src/lib/model/*"],
      "@goeko/ui": ["libs/ui/src/index.ts"],
      "@goeko/ui/*": ["libs/ui/src/lib/ui/*"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
