{
	"$schema": "../../node_modules/nx/schemas/project-schema.json",
	"name": "playground",
	"prefix": "goeko",
	"projectType": "application",
	"sourceRoot": "apps/playground/src",
	"tags": [],
	"targets": {
		"build": {
			"configurations": {
				"development": {
					"buildOptimizer": false,
					"extractLicenses": false,
					"namedChunks": true,
					"optimization": false,
					"sourceMap": true,
					"vendorChunk": true
				},
				"production": {
					"budgets": [
						{
							"maximumError": "1mb",
							"maximumWarning": "500kb",
							"type": "initial"
						},
						{
							"maximumError": "4kb",
							"maximumWarning": "2kb",
							"type": "anyComponentStyle"
						}
					],
					"outputHashing": "all"
				}
			},
			"defaultConfiguration": "production",
			"executor": "@nrwl/angular:webpack-browse",
			"options": {
				"assets": [
					"apps/playground/src/favicon.ico",
					"apps/playground/src/assets"
				],
				"index": "apps/playground/src/index.html",
				"inlineStyleLanguage": "scss",
				"main": "apps/playground/src/main.ts",
				"outputPath": "dist/apps/playground",
				"polyfills": [
					"zone.js"
				],
				"scripts": [
					"node_modules/@webcomponents/webcomponentsjs/webcomponents-loader.js"
				],
				"styles": [
					"apps/playground/src/styles.scss"
				],
				"tsConfig": "apps/playground/tsconfig.app.json"
			},
			"outputs": [
				"{options.outputPath}"
			]
		},
		"extract-i18n": {
			"executor": "@angular-devkit/build-angular:extract-i18n",
			"options": {
				"browserTarget": "playground:build"
			}
		},
		"lint": {
			"executor": "@nrwl/linter:eslint",
			"options": {
				"lintFilePatterns": [
					"apps/playground/**/*.ts",
					"apps/playground/**/*.html"
				]
			},
			"outputs": [
				"{options.outputFile}"
			]
		},
		"serve": {
			"configurations": {
				"development": {
					"browserTarget": "playground:build:development"
				},
				"production": {
					"browserTarget": "playground:build:production"
				}
			},
			"defaultConfiguration": "development",
			"executor": "@angular-devkit/build-angular:dev-server"
		},
		"test": {
			"executor": "@nrwl/jest:jest",
			"options": {
				"jestConfig": "apps/playground/jest.config.ts",
				"passWithNoTests": true
			},
			"outputs": [
				"{workspaceRoot}/coverage/{projectRoot}"
			]
		}
	}
}